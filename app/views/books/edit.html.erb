<%= notice %>
<div class="container">
  <div class="col-sm-6">
    <h2>Editing Book</h2>
      <%= form_for(@book) do |f| %>
        <% if @book.errors.any? %>
          <div id="error_explanation">
            <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
            <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
        <div class="field">
          <%= f.label :Title %><br/>
          <%= f.text_field :title, autofocus: true, class:"form-control", id:"inputTitle", placeholder:"タイトル"%>
        </div>
        <div class="field">
          <%= f.label :Opinion %><br/>
          <%= f.text_area :body, autofocus: true, autocomplete: "Opinion" %>
        </div>
        <div class="actions">
          <%= f.submit "Update Book", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
        </div>
      <% end %>
      <%= link_to "Show", book_path(@book) %>　｜　<%= link_to "Back", books_path %>
  </div>
</div>