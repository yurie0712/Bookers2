<%= notice %>
<div class="container">
  <div class="col-sm-8">
    <h2>User info</h2>

    <%= form_for(@user) do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
        <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
      <br>
      <div class="field">
        <%= f.label :Name %>
        <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
      </div>
      <br>
      <div class="field">
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
        <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
      </div>
      <br>
      <div class="field">
        <%= f.label :introduction %><br/>
        <%= f.text_area :introduction, autofocus: true, autocomplete: "introduction" %>
      </div>
      <div class="actions">
        <%= f.submit "Update User", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
      </div>
      <% end %>
  </div>
</div>