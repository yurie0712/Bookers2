    <div id="error_explanation">
      <h2><%= @book.errors.count %>errors prohibited this obj from being saved:</h2>
      <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="container text-center">
    <div class="row content">
    	<div class="col-xs-3 sidenav">
    	  <!-- サイドバー -->
    	  <h2>User info</h2>
          <div class="profile-container">
          <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
          <table class="table">
            <tbody>
            	<tr></tr>
            	<tr>
            		<th>name</th>
            		<th><%= @user.name %></th>
            	</tr>
            	<tr>
            		<th>introduction</th>
            		<th><%= @user.introduction %></th>
            	</tr>
            </tbody>
          </table>
          <%= link_to edit_user_path(@user.id), method: :get do %>
            <i class="glyphicon glyphicon-wrench" aria-hidden="true"></i>
          <% end %>
        </div>
  	    <h1>New book</h1>
        <%= form_for(@book) do |f| %>
  	     title
  	     <%= f.text_field :title, class:"form-control" %>
  	     Opinion
  	     <%= f.text_area :body, class:"form-control" %>
  	     <%= f.submit "Create Book", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
        <% end %>

      </div>
      <div class="col-xs-9 text-left">
        <h1>Books</h1>
        <table class="table">
          <thead>
            <tr>
              <th colspan=""></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><%= attachment_image_tag @user, :profile_image, :fill, 60, 60, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%></td>
              <td>
                <%= link_to book_path(book.id) do %>
                  <%= book.title %>
                <% end %>
              </td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>